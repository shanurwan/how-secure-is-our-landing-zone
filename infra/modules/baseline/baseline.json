{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyRootUser",
      "Effect": "Deny",
      "Action": "*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalArn": "arn:aws:iam::*:root"
        }
      }
    },
    {
      "Sid": "DenyUnsupportedRegions",
      "Effect": "Deny",
      "NotAction": [
        "iam:*",
        "organizations:*",
        "account:*",
        "sso:*",
        "sso-directory:*",
        "sso-admin:*",
        "sts:*",
        "cloudtrail:*",
        "support:*",
        "budgets:*",
        "tag:*"
      ],
      "Resource": "*",
      "Condition": {
        "Null": { "aws:RequestedRegion": "false" },
        "StringNotEqualsIfExists": {
          "aws:RequestedRegion": [ "ap-southeast-5" ]
        }
      }
    }
  ]
}

